#include <iostream>

using namespace std;

void build_ziggurat(int** Ziggurat, int n)
{
    int Ziggurat2[n][n];
    
    if (n % 2 == 0)
        for (int i = 0; i < n / 2; i++)
        {
            int k = n - 1 - i;
            int ii = i + 1;
            
            for (int j = i; j < n - i; j++)
            {
                Ziggurat2[i][j] = ii;
                Ziggurat2[k][j] = ii;
                Ziggurat2[j][i] = ii;
                Ziggurat2[j][k] = ii;
            }
        }
    else
        for (int i = 0; i <= n / 2; i++)
        {
            int k = n - 1 - i;
            int ii = i + 1;
            
            for (int j = i; j < n - i; j++)
            {
                Ziggurat2[i][j] = ii;
                Ziggurat2[k][j] = ii;
                Ziggurat2[j][i] = ii;
                Ziggurat2[j][k] = ii;
            }
        }
        
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
            cout << Ziggurat2[i][j] << " ";
        
        cout << endl;
    }
}

int main()
{
    int n;
 
    cin >> n;
    
    int Ziggurat[n][n];
    
    build_ziggurat((int**)Ziggurat, n);

    return 0;
}
